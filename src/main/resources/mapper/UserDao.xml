<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aaa.dao.UserDao">
    <!--后台-->
    <select id="findAll" resultType="com.aaa.entity.User">
        select * from user
    </select>

    <select id="showPageInfo" resultType="com.aaa.entity.User">
        select * from user
    </select>

    <update id="updateState">
        update user set state = #{param1} where uid = #{param2}
    </update>

    <!--前台-->
    <select id="userLogin" resultType="com.aaa.entity.User">
        select * from user where phone = #{param1} and pwd = #{param2}
    </select>

</mapper>